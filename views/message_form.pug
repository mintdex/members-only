extends layout 

block content 
    h1= title 

    form(action="", method="post") 
        div.form-group
            input#title.form-control(type="text" name="title" required="true" placeholder="Title")
        div.form-group
            textarea#text.form-control(type="text" name="text" required="true" placeholder="Text")
        button.btn.btn-primary(type="submit") Submit

    if errors 
        ul 
            for error in errors 
                li!= error