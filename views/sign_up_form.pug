extends layout

block content 
    h1= title 


    form(action="" method="POST")
        div.form-group
            label(for="full_name") Full name
            input#full_name.form-control(type="text" required="true" name="full_name" placeholder="Full name" value=(undefined === user ? "" : user.full_name)) 
        div.form-group
            label(for="username") Username
            input#username.form-control(type="email" required="true" name="username" placeholder="Your email here" value=(undefined === user ? "" : user.username))
        div.form-group
            label(for="password") Password
            input#password.form-control(type="password" required="true" name="password") 
        div.form-group
            label(for="username") Password Confirmation
            input#confirmPassword.form-control(type="password" required="true" name="confirmPassword") 
        button.btn.btn-primary(type="submit") Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg